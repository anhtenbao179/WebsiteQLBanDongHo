@model WebsiteQLBanDongHo.Areas.Admin.Models.PromotionViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    .centered-panel-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 0 15px;
    }

    .panel-primary {
        border: none;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

    .panel-body {
        padding-top: 25px;
        padding-bottom: 30px;
    }

    .page-header {
        border-bottom: 3px solid #3498db;
        padding-bottom: 15px;
        margin-bottom: 30px;
        color: #2c3e50;
        font-weight: 500;
        display: flex;
        justify-content: space-between;
        align-items: flex-end;
    }

    .page-header h1 {
        margin-top: 0;
        margin-bottom: 0;
        font-size: 2em;
    }

    .form-content-wrapper {
        padding: 0 15px;
    }

    .control-label {
        font-weight: 600;
        color: #333;
        margin-bottom: 8px;
        display: block;
        font-size: 0.95em;
    }

    .form-control {
        border-radius: 6px;
        transition: all 0.3s ease;
    }

    .form-control:focus {
        border-color: #2ecc71;
        box-shadow: 0 0 0 4px rgba(46, 204, 113, 0.2);
        outline: none;
    }

    .text-danger {
        font-size: 0.85em;
        color: #dc3545 !important;
    }

    .action-buttons {
        text-align: center;
        border-top: 1px solid #eee;
        padding-top: 30px;
        margin-top: 30px;
    }

    .btn-lg-custom {
        padding: 12px 30px;
        font-weight: 600;
        border-radius: 50px;
        transition: all 0.3s ease;
        margin: 0 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .btn-success {
        background-color: #2ecc71;
        border-color: #2ecc71;
        color: white;
    }

    .btn-success:hover {
        background-color: #27ae60;
        border-color: #27ae60;
        box-shadow: 0 6px 10px rgba(46, 204, 113, 0.3);
        transform: translateY(-2px);
    }

    .btn-danger-custom {
        background-color: #e74c3c;
        border-color: #e74c3c;
        color: white;
    }

    .btn-danger-custom:hover {
        background-color: #c0392b;
        border-color: #c0392b;
        box-shadow: 0 6px 10px rgba(231, 76, 60, 0.3);
        transform: translateY(-2px);
    }
</style>

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <div class="page-header">
                <h1><i class="fa fa-folder-open"></i> Thêm mới Khuyến mãi</h1>
                <p style="color:green; font-weight: bold; text-align: right; margin: 0;">@ViewBag.message</p>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="centered-panel-container">
                <div class="panel panel-primary">
                    <div class="panel-body">
                        <form method="post" action="~/Admin/Promotion/Create" id="form-promotion">
                            <div class="form-content-wrapper">
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <label class="control-label">Mã khuyến mãi</label>
                                            @Html.ValidationMessageFor(model => model.MAKM, "", new { @class = "text-danger" })
                                            <input type="text" class="form-control" id="MAKM" name="MAKM" placeholder="Mã tự động" value="@Model.MAKM" readonly />
                                        </div>
                                        <div class="col-md-8">
                                            <label class="control-label">Tên Khuyến mãi (*)</label>
                                            @Html.ValidationMessageFor(model => model.TENKM, "", new { @class = "text-danger" })
                                            <input type="text" class="form-control" id="TENKM" name="TENKM" placeholder="Nhập tên khuyến mãi" value="@Model.TENKM" required />
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label class="control-label">Ngày bắt đầu (*)</label>
                                            @Html.ValidationMessageFor(model => model.NGAYBD, "", new { @class = "text-danger" })
                                        <input type="datetime-local" class="form-control" id="NGAYBD" name="NGAYBD" placeholder="" value="@(Model.NGAYBD.ToString("yyyy-MM-ddTHH:mm"))" required />
                                        </div>
                                        <div class="col-md-6">
                                            <label class="control-label">Ngày kết thúc (*)</label>
                                            @Html.ValidationMessageFor(model => model.NGAYKT, "", new { @class = "text-danger" })
                                        <input type="datetime-local" class="form-control" id="NGAYKT" name="NGAYKT" placeholder="" value="@(Model.NGAYKT.ToString("yyyy-MM-ddTHH:mm"))" required />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="action-buttons">
                                <button class="btn btn-success btn-lg-custom" id="btn-ok-create" type="submit"><i class="fa fa-check-circle"></i> Đồng Ý </button>
                                <a href="~/Admin/Promotion/Index" class="btn btn-danger-custom btn-lg-custom" id="btn-cancel-create"><i class="fa fa-times-circle"></i> Bỏ Qua</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $("#form-promotion").submit(function () {
        var ngbd = $("#NGAYBD").val();
        var ngkt = $("#NGAYKT").val();
        var now = new Date();
        var ngaybd = new Date(ngbd);
        var ngaykt = new Date(ngkt);

        if (ngaybd < now) {
            alert("Ngày bắt đầu phải lớn hơn hoặc bằng ngày giờ hiện tại.");
            return false;
        }

        if (ngaybd >= ngaykt) {
            alert("Ngày kết thúc phải lớn hơn ngày bắt đầu.");
            return false;
        }
        return true;
    });
</script>