@model WebsiteQLBanDongHo.Areas.Admin.Models.UserEditViewModel

@{
    ViewBag.Title = "Cập nhật tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Cập nhật tài khoản</h2>
    <a class="btn btn-outline-secondary" href="@Url.Action("Index")">Quay lại</a>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="card shadow-sm">
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.MATK)

            <div class="mb-3">
                @Html.LabelFor(m => m.TENDN, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.TENDN, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.TENDN, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.MALOAITK, new { @class = "form-label" })
                @Html.DropDownListFor(m => m.MALOAITK, (SelectList)ViewBag.Roles, "-- Chọn quyền --", new { @class = "form-select" })
                @Html.ValidationMessageFor(m => m.MALOAITK, "", new { @class = "text-danger" })
            </div>

            <div class="form-check mb-3">
                @Html.CheckBoxFor(m => m.TRANGTHAI, new { @class = "form-check-input", id = "ckActive" })
                <label class="form-check-label" for="ckActive">Kích hoạt</label>
            </div>

            <button type="submit" class="btn btn-primary">
                <i class="fa-solid fa-save me-1"></i> Lưu
            </button>
        }
    </div>
</div>

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}