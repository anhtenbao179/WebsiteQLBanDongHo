@model WebsiteQLBanDongHo.Areas.Admin.Models.PromotionDetailViewModel

@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    .centered-panel-container {
        max-width: 900px;
        margin: 0 auto 100px auto;
        padding: 0 15px;
    }

    .panel-primary {
        border: none;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

    .panel-body {
        padding: 40px 25px 30px 25px;
    }

    .page-header {
        border-bottom: 3px solid #3498db;
        padding-bottom: 15px;
        margin-bottom: 30px;
        color: #2c3e50;
        font-weight: 500;
        display: flex;
        justify-content: space-between;
        align-items: flex-end;
    }

    .page-header h1 {
        margin-top: 0;
        margin-bottom: 0;
        font-size: 2em;
    }

    .control-label {
        font-weight: 600;
        color: #333;
        margin-bottom: 8px;
        display: block;
        font-size: 0.95em;
    }

    .form-control {
        border-radius: 6px;
        transition: all 0.3s ease;
    }

    .form-control:focus {
        border-color: #2ecc71;
        box-shadow: 0 0 0 4px rgba(46, 204, 113, 0.2);
        outline: none;
    }

    .form-control[readonly] {
        background-color: #f8f8f8;
        cursor: not-allowed;
    }

    .text-danger {
        font-size: 0.85em;
        color: #dc3545 !important;
    }

    .message-container {
        text-align: center;
        margin-bottom: 15px;
        font-weight: bold;
    }

    .action-buttons {
        text-align: right;
        border-top: 1px solid #eee;
        padding-top: 20px;
        margin-top: 30px;
    }

    .btn-lg-custom {
        padding: 10px 25px;
        font-weight: 600;
        border-radius: 50px;
        transition: all 0.3s ease;
        margin-left: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .btn-success {
        background-color: #2ecc71;
        border-color: #2ecc71;
        color: white;
    }

    .btn-success:hover {
        background-color: #27ae60;
        border-color: #27ae60;
        box-shadow: 0 6px 10px rgba(46, 204, 113, 0.3);
        transform: translateY(-2px);
    }

    .btn-danger-custom {
        background-color: #e74c3c;
        border-color: #e74c3c;
        color: white;
    }

    .btn-danger-custom:hover {
        background-color: #c0392b;
        border-color: #c0392b;
        box-shadow: 0 6px 10px rgba(231, 76, 60, 0.3);
        transform: translateY(-2px);
    }
</style>

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <div class="page-header">
                <h1><i class="fa fa-edit"></i> Chỉnh sửa Chi tiết Khuyến mãi</h1>
                <p style="color:green; font-weight: bold; text-align: right; margin: 0;">@ViewBag.message</p>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="centered-panel-container">
                <div class="panel panel-primary">
                    <div class="panel-body">
                        <form method="post" action="~/Admin/PromotionDetail/Update">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-4">
                                        <label class="control-label">Khuyến mãi</label>
                                        <input type="hidden" id="MAKM" name="MAKM" value="@Model.MAKM" />
                                        <input type="text" class="form-control" value="@ViewBag.KHUYENMAI" readonly />
                                    </div>
                                    <div class="col-md-4">
                                        <label class="control-label">Sản phẩm</label>
                                        <input type="hidden" id="MASP" name="MASP" value="@Model.MASP" />
                                        <input type="text" class="form-control" value="@ViewBag.SANPHAM" readonly />
                                    </div>
                                    <div class="col-md-4">
                                        <label class="control-label">Phần trăm giảm giá (*)</label>
                                        @Html.ValidationMessageFor(model => model.PHANTRAMKM, "", new { @class = "text-danger" })
                                        <input type="number" class="form-control" id="PHANTRAMKM" name="PHANTRAMKM" placeholder="Nhập % giảm (0-100)" required value="@Model.PHANTRAMKM" min="0" max="100" />
                                    </div>
                                </div>
                            </div>
                            <div class="action-buttons">
                                <a href="~/Admin/PromotionDetail/Index?makm=@Model.MAKM" class="btn btn-danger-custom btn-lg-custom" id="btn-cancel-update"><i class="fa fa-times-circle"></i> Bỏ Qua</a>
                                <button class="btn btn-success btn-lg-custom" id="btn-ok-update" type="submit"><i class="fa fa-check-circle"></i> Đồng Ý</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $('#PHANTRAMKM').on('input', function() {
        var value = parseInt($(this).val());
        if (value < 0 || value > 100) {
            $(this).css("border-color", "red");
        } else {
            $(this).css("border-color", "#ccc");
        }
    });
</script>