@model WebsiteQLBanDongHo.Areas.Admin.Models.ProductBrandViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    .centered-panel-container {
        max-width: 500px;
        margin: 0 auto;
        padding: 0 15px;
    }

    .panel-primary {
        border: none;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

    .panel-body {
        padding-top: 25px;
        padding-bottom: 30px;
    }

    .page-header {
        border-bottom: 3px solid #3498db;
        padding-bottom: 15px;
        margin-bottom: 30px;
        color: #2c3e50;
        font-weight: 500;
    }

    .form-content-wrapper {
        max-width: 450px;
        margin: 0 auto;
        padding: 0 15px;
    }

    .control-label {
        font-weight: 600;
        color: #333;
        margin-bottom: 8px;
        display: block;
        font-size: 0.95em;
    }

    .form-control {
        border-radius: 6px;
        transition: all 0.3s ease;
    }

    .form-control:focus {
        border-color: #2ecc71;
        box-shadow: 0 0 0 4px rgba(46, 204, 113, 0.2);
        outline: none;
    }

    input[type="file"] {
        padding-top: 6px;
        padding-bottom: 6px;
    }

    .image-preview-area {
        margin-top: 20px;
        padding: 20px;
        border: 1px dashed #ccc;
        border-radius: 8px;
        background-color: #f9f9f9;
        text-align: center;
        margin-bottom: 25px;
    }

    .action-buttons {
        text-align: center;
        border-top: 1px solid #eee;
        padding-top: 30px;
        margin-top: 30px;
    }

    .btn-lg {
        padding: 12px 30px;
        font-weight: 600;
        border-radius: 50px;
        transition: all 0.3s ease;
        margin: 0 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .btn-success {
        background-color: #2ecc71;
        border-color: #2ecc71;
    }

    .btn-success:hover {
        background-color: #27ae60;
        border-color: #27ae60;
        box-shadow: 0 6px 10px rgba(46, 204, 113, 0.3);
        transform: translateY(-2px);
    }

    .btn-default {
        border: 1px solid #bdc3c7;
        color: #34495e;
    }

    .btn-default:hover {
        background-color: #ecf0f1;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        transform: translateY(-1px);
    }

    .modal-content {
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
    }

    .modal-header {
        background-color: #f39c12;
        color: white;
        border-top-left-radius: 12px;
        border-top-right-radius: 12px;
        border-bottom: none;
        padding: 18px 25px;
    }

    .modal-title {
        font-size: 1.5em;
        font-weight: 600;
    }

    .modal-header .close {
        color: white;
        opacity: 1;
        font-size: 1.5em;
        text-shadow: none;
    }

    .modal-body {
        padding: 30px 25px;
        font-size: 1.1em;
        color: #34495e;
        text-align: center;
    }

    .modal-footer {
        border-top: 1px solid #eee;
        padding: 20px 25px;
        text-align: center;
    }

    .modal-footer .btn-warning {
        background-color: #f39c12;
        border-color: #f39c12;
        color: white;
        padding: 10px 25px;
        font-weight: 600;
        border-radius: 50px;
        transition: all 0.3s ease;
        margin: 0 10px;
    }

    .modal-footer .btn-warning:hover {
        background-color: #e67e22;
        border-color: #e67e22;
        box-shadow: 0 4px 8px rgba(243, 156, 18, 0.5);
    }

    .modal-footer .btn-default {
        background: transparent;
        border: none;
        color: #95a5a6;
        padding: 10px 25px;
        font-weight: 600;
        transition: color 0.3s ease;
    }

    .modal-footer .btn-default:hover {
        color: #7f8c8d;
    }

    #HINH {
        max-width: 100%;
        height: auto;
        display: block;
        margin: 10px auto 0;
        border: 1px solid #ddd;
        padding: 3px;
        border-radius: 4px;
    }
</style>

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header"><i class="fa fa-tag"></i> Thêm mới thương hiệu</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="centered-panel-container">
                <div class="panel panel-primary">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-12">
                                <p style="color:green; font-weight: bold; text-align: center; margin-bottom: 15px;">@ViewBag.message</p>
                            </div>
                        </div>
                        <form method="post" action="~/Admin/ProductBrand/Create" id="form-create">
                            <div class="form-content-wrapper">
                                <div class="form-group">
                                    <label class="control-label">Tên thương hiệu (*)</label>
                                    @Html.ValidationMessageFor(model => model.TENTH, "", new { @class = "text-danger" })
                                    <input type="text" class="form-control" id="TENTH" name="TENTH" placeholder="Nhập tên thương hiệu" value="@Model.TENTH" required />
                                </div>
                                <div class="form-group">
                                    <label class="control-label">Chọn hình thương hiệu (*)</label>
                                    @Html.ValidationMessageFor(model => model.HINHTH, "", new { @class = "text-danger" })
                                    <input type="file" class="form-control" id="HINHTH" required />
                                    <input type="hidden" id="TENHINHTH" name="HINHTH" value="@Model.HINHTH" />
                                    <p class="help-block">Chọn file ảnh (jpg, png,...) cho thương hiệu.</p>
                                </div>
                                <div class="image-preview-area">
                                    <label class="control-label" style="font-weight: normal; margin-bottom: 0;">Ảnh xem trước:</label><br />
                                    <img id="HINH" src="@(string.IsNullOrEmpty(Model.HINHTH) ? "" : "/images/HINHTH/" + Model.HINHTH)" alt="Hình thương hiệu" />
                                </div>
                            </div>
                            <div class="action-buttons">
                                <button class="btn btn-success btn-lg" id="btn-ok-create" type="submit"><i class="fa fa-check-circle"></i> Đồng Ý</button>
                                <a href="~/Admin/ProductBrand/Index" class="btn btn-default btn-lg" id="btn-cancel-create"><i class="fa fa-times-circle"></i> Bỏ Qua</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $("#form-create").submit(function () {
        if (document.getElementById("HINHTH").files.length === 0 && document.getElementById("TENHINHTH").value === "") {
            alert("Vui lòng chọn hình thương hiệu.");
            return false;
        }
        var hinh = tenhinh();
        document.getElementById("TENHINHTH").value = hinh;
        Image(hinh);
    });

    $("#HINHTH").change(function () {
        var hinh = tenhinh();
        document.getElementById("TENHINHTH").value = hinh;
        readURL(this);
    });

    function getFileName(filePath) {
        return filePath.substr(filePath.lastIndexOf('\\') + 1);
    };

    function addZero(x, n) {
        while (x.toString().length < n) {
            x = "0" + x;
        }
        return x;
    };

    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                $('#HINH').attr('src', e.target.result);
            }
            reader.readAsDataURL(input.files[0]);
        }
    };

    function tenhinh() {
        if (document.getElementById("HINHTH").files.length > 0) {
            var fileInput = document.getElementById("HINHTH");
            var originalFileName = fileInput.files[0].name;
            return originalFileName;
        }
        return document.getElementById("TENHINHTH").value;
    };

    function Image(tenhinh) {
        var formData = new FormData();
        var totalFiles = document.getElementById("HINHTH").files.length;
        if (totalFiles === 0) return;
        for (var i = 0; i < totalFiles; i++) {
            var file = document.getElementById("HINHTH").files[i];
            formData.append("uploadedFile", file);
        }
        document.getElementById("TENHINHTH").value = tenhinh;
        $.ajax({
            type: "POST",
            url: '/Admin/ProductBrand/PhotoCreate',
            data: formData,
            dataType: 'json',
            contentType: false,
            processData: false,
            async: false,
            success: function (data) {
                if (data.result == true) {
                } else {
                    alert("Tải ảnh thất bại! Vui lòng thử lại.");
                }
            },
            error: function () {
                alert("Lỗi kết nối khi tải ảnh.");
            }
        });
    }
</script>